pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git branch: 'master2', url: 'https://github.com/RajAhire-1/E-commerce-project-springBoot.git'
            }
        }

        stage('Build with Maven') {
            steps {
                dir('JtProject') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Upload & Deploy to EC2') {
            steps {
                sshagent(credentials: ['ec2-ssh']) {
                    sh '''
                    echo "== Copying JAR to EC2 =="
                    scp -o StrictHostKeyChecking=no \
                    JtProject/target/JtSpringProject-0.0.1-SNAPSHOT.jar \
                    ubuntu@3.111.144.92:/home/ubuntu/app.jar

                    echo "== Restarting app =="
                    ssh -o StrictHostKeyChecking=no ubuntu@3.111.144.92 << 'EOF'
                    echo "Killing old app..."
                    pkill -f "java -jar /home/ubuntu/app.jar" || true

                    echo "Starting new app..."
                    nohup java -jar /home/ubuntu/app.jar > app.log 2>&1 &

                    echo "App started successfully"
                    exit 0
                    EOF
                    '''
                }
            }
        }
    }
}
